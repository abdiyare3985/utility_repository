<odoo>
    <record id="view_single_customer_form" model="ir.ui.view">
        <field name="name">single.customer.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Contact">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_avatar">
                            <field name="image_1920" widget="image" class="oe_avatar"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_type"/>
                            <field name="parent_id"/>
                            <field name="is_company"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="zip"/>
                            <field name="state_id"/>
                            <field name="country_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="website"/>
                        </group>
                        <group>
                            <field name="customer_rank"/>
                            <field name="supplier_rank"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Meters List">
                            <tree>
                <field name="meter_ids"/>
                <!-- <field name="meter_ids"/> -->
                <!-- <field name="serial_id"/> -->
                <!-- Add more fields as needed -->
            </tree>
                        </page>
                        <!-- Add more pages as needed -->
                    </notebook>
                </sheet>
                 <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers" readonly="1"/>
                <field name="activity_ids" widget="mail_activity" readonly="1"/>
                <field name="message_ids" widget="mail_thread" readonly="1"/>
                </div>
            </form>
        </field>
    </record>
</odoo>