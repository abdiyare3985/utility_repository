<odoo>
    <record id="view_users_form_inherit_utility" model="ir.ui.view">
        <field name="name">res.users.form.inherit.utility</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='login']" position="after">
               <group>
                    <field name="is_technitian"/>
                    <field name="is_meterreader"/>
                </group>
            </xpath>
        </field>
    </record>


  <record id="view_users_form_inherit_model_permissions" model="ir.ui.view">
    <field name="name">res.users.form.model.permissions</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='preferences']" position="after">
        <page string="Model Permissions">
          <field name="model_permission_ids">
            <tree editable="bottom">
              <field name="model_name"/>
              <field name="perm_read"/>
              <field name="perm_write"/>
              <field name="perm_create"/>
              <field name="perm_unlink"/>
            </tree>
            <form>
              <group>
                <field name="model_name" readonly="1"/>
                <group>
                  <field name="perm_read"/>
                  <field name="perm_write"/>
                  <field name="perm_create"/>
                  <field name="perm_unlink"/>
                </group>
              </group>
            </form>
          </field>
        </page>
      </xpath>
    </field>
  </record>


