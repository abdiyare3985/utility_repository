<odoo>
    <record id="view_meter_discounts_tree" model="ir.ui.view">
        <field name="name">meter.discounts.tree</field>
        <field name="model">meter.discounts</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="percentage"/>
                <field name="usage_type"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_meter_discounts_form" model="ir.ui.view">
        <field name="name">meter.discounts.form</field>
        <field name="model">meter.discounts</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="percentage"/>
                        <field name="usage_type"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

   
   

    <record id="action_meter_discounts" model="ir.actions.act_window">
        <field name="name">Meter Discounts</field>
        <field name="res_model">meter.discounts</field>
        <field name="view_mode">tree,form</field>
    </record>
     <menuitem id="menu_meter_discounts" name="Discounts" parent="menu_meter_config" action="action_meter_discounts"/>
</odoo>