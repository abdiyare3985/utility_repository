<odoo>
    <record id="view_meter_reset_tree" model="ir.ui.view">
        <field name="name">meter.reset.tree</field>
        <field name="model">meter.reset</field>
        <field name="arch" type="xml">
            <tree>
                <field name="meter_id"/>
               
                <field name="current_reading"/>
                <field name="reset_date"/>
            </tree>
        </field>
    </record>

    <record id="view_meter_reset_form" model="ir.ui.view">
        <field name="name">meter.reset.form</field>
        <field name="model">meter.reset</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="meter_id"/>
                       
                        <field name="current_reading"/>
                        <field name="reset_date"/>
                        <field name="note"/>
                    </group>
                </sheet>
                 <div class="oe_chatter">
    <field name="message_follower_ids" widget="mail_followers" readonly="1"/>
    <field name="activity_ids" widget="mail_activity" readonly="1"/>
    <field name="message_ids" widget="mail_thread" readonly="1"/>
</div>
            </form>
        </field>
    </record>

    <record id="action_meter_reset" model="ir.actions.act_window">
        <field name="name">Meter Resets</field>
        <field name="res_model">meter.reset</field>
        <field name="view_mode">tree,form</field>
        <field name="views" eval="[
            (ref('view_meter_reset_tree'), 'tree'),
            (ref('view_meter_reset_form'), 'form')
        ]"/>
    </record>

    <menuitem id="menu_meter_reset" name="Meter Resets" parent="menu_meter_config" action="action_meter_reset" sequence="60"/>
</odoo>