<odoo>
    <record id="view_meter_status_reason_wizard_form" model="ir.ui.view">
        <field name="name">meter.status.reason.wizard.form</field>
        <field name="model">meter.status.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Provide Reason">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>