<odoo>
    <record id="view_invoice_report_wizard_form" model="ir.ui.view">
        <field name="name">invoice.report.wizard.form</field>
        <field name="model">invoice.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Custom Invoice">
                <group>
                    <field name="invoice_ids" widget="many2many_tags"/>
                    <field name="invoice_meter_info" readonly="1"/>
                </group>
                <footer>
                    <button name="action_print_report" type="object" string="Print PDF" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_invoice_report_wizard" model="ir.actions.act_window">
        <field name="name">Print Customer Invoice</field>
        <field name="res_model">invoice.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_invoice_report_wizard"
              name="Print Custom Invoice"
              parent="menu_meter_reports"
              action="action_invoice_report_wizard"
              sequence="100"/>
</odoo>