<odoo>
    <record id="view_meter_reading_report_wizard_form" model="ir.ui.view">
        <field name="name">meter.reading.report.wizard.form</field>
        <field name="model">meter.reading.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Meter Reading Report">
            <group>
                <group>
                    <field name="period_date" />
                    <field name="period_date2" />
                    <field name="zone_id" string = "Zone"/>
                </group>
                <group>
                    <field name="min_consumption" string = "Min Consumption"/>
                    <field name="max_consumption" string = "Max Consumption"/>

                </group>
                </group>
                <footer>
                    <button name="action_print_report" type="object" string="Print Billed" class="btn-primary"/>
                    <button name="action_print_pending_report" type="object" string="Print Un Billed" class="btn-danger"/>
                    <button name="action_print_constant_report" type="object" string="Summary By Zone" class="btn-info"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_meter_reading_report_wizard" model="ir.actions.act_window">
        <field name="name">Meter Reading Report</field>
        <field name="res_model">meter.reading.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_meter_reading_report_wizard"
              name="Meter Reading Report"
              parent="menu_meter_reports"
              action="action_meter_reading_report_wizard"
              />


              
</odoo>