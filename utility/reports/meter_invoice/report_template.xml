<odoo>
    <template id="report_custom_invoice_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div style="page-break-after: always;">
                        <h2 style="text-align:center;">Custom Invoice</h2>
                        <p><strong>Invoice Number:</strong> <t t-esc="o.name"/></p>
                        <p><strong>Customer:</strong> <t t-esc="o.partner_id.display_name"/></p>
                        <p>
    <strong>Meter:</strong>
    <t t-esc="o.meter_reading_id.meter_id.name"/> /
    <t t-esc="o.meter_reading_id.meter_id.zone_id.name"/>
</p>
                        <p><strong>Date:</strong> <t t-esc="o.invoice_date"/></p>
                        
                        <t t-if="o.invoice_origin">
                            <p><strong>Meter Reading:</strong> <t t-esc="o.invoice_origin"/></p>
                        </t>
                        <table class="table table-sm table-bordered" style="width:100%; font-size:12px;">
                            <thead>
                                <tr>
                                    <th >Description</th>
                                    <th style="text-align:center;">Consumption</th>
                                    <th style="text-align:center;">Unit Price</th>
                                    <th style="text-align:center;">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                               
                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <tr>
                                        <td ><t t-esc="line.name"/></td>
                                        <td style="text-align:center;"><t t-esc="line.quantity"/></td>
                                        <td style="text-align:center;"><t t-esc="line.price_unit"/></td>
                                        <td style="text-align:center;"><t t-esc="line.price_subtotal"/></td>
                                    </tr>
                                </t>
                    
                            </tbody>
                        </table>
                        <table style="width: 40%; float: right; font-size: 12px; margin-top: 10px;" class="table table-bordered">
    <tbody>
        <tr>
            <td style="font-weight: bold; text-align: right;">Total Bill:</td>
            <td style="text-align: center;"><t t-esc="o.amount_total"/></td>
        </tr>
       <tr>
    <td style="font-weight: bold; text-align: right;">Balance Before This Invoice:</td>
    <td style="text-align: center;">
        <t t-esc="previous_balance_map.get(o.id, 0.0)"/>
    </td>
</tr>
<tr>
            <td style="font-weight: bold; text-align: right;">Grand Total:</td>
            <td style="text-align: center;">$
                <t t-esc="o.amount_total + previous_balance_map.get(o.id, 0.0)"/>
            </td>
        </tr>
    </tbody>
</table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>