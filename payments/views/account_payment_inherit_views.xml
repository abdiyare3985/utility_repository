<odoo>
    <!-- Tree View Inherit: Add fields at the end of the tree -->
    <record id="view_account_payment_tree_inherit_epayment" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit.epayment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="zone_id"/>
                <field name="balance"/>
                <field name="mobile_sender"/>
                <field name="trans_ref"/>
            </xpath>
        </field>
    </record>

    <!-- Form View Inherit: Add fields after partner_id -->
    <record id="view_account_payment_form_inherit_epayment" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.epayment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='is_internal_transfer']" position="attributes">
            <attribute name="readonly">1</attribute>
        </xpath>
        <xpath expr="//div[@name='button_box']" position="inside">
    <button type="object"
            name="action_print_receipt"
            class="oe_stat_button"
            icon="fa-print"
            string="Print Receipt"
           invisible="id == False"/>
</xpath>
        <xpath expr="//field[@name='payment_type']" position="attributes">
            <attribute name="readonly">1</attribute>
        </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="zone_id"/>
                <field name="balance"/>
                <field name="mobile_sender"/>
                <field name="trans_ref"/>
            </xpath>
        </field>
    </record>

    <!-- Action and Menu -->
    <record id="action_account_payment_epayment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="e_payment_menu_payments" name="Manual" 
        parent="e_payment_menu_root" 
        action="action_account_payment_epayment" sequence="10"/>
</odoo>